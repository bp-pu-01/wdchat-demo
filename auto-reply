        function login(){
            var xhr = new XMLHttpRequest();
            xhr.open('POST', "https://apps.applozic.com/rest/ws/register/client", true);
			/*
			var email = 'viponrit@blueprint.co.th';
			var password = 'P@ssw0rd';
			
